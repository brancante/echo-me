# Echo Me â€” Environment Variables
# Copy to .env and fill in your values

# ==================== DATABASE ====================
# PostgreSQL connection (default for Docker Compose)
DATABASE_URL=postgresql://echo:echo@db:5432/echome

# ==================== REDIS ====================
# Redis for job queues (default for Docker Compose)
REDIS_URL=redis://redis:6379

# ==================== NEXTAUTH (REQUIRED) ====================
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-random-secret-here-replace-me
# Set to your domain in production (e.g., https://echome.example.com)
NEXTAUTH_URL=http://localhost:3000

# ==================== GOOGLE OAUTH (REQUIRED) ====================
# Get credentials: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID with redirect: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==================== ELEVENLABS (REQUIRED FOR VOICE) ====================
# Get API key: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=

# ==================== OPENAI (OPTIONAL) ====================
# Required for persona extraction and LLM features
# Get key: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ==================== TELEGRAM (OPTIONAL) ====================
# Required for Telegram bot channel
# Create bot: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=

# ==================== CHROMADB ====================
# Vector database for RAG (default for Docker Compose)
CHROMA_HOST=chroma
CHROMA_PORT=8000
